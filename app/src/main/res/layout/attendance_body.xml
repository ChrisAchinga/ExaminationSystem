<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/custom_attendance">

    <TextView
        android:id="@+id/assignedTableText"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:gravity="center"
        android:textSize="36sp"
        android:padding="2sp" />

    <LinearLayout
        android:id="@+id/assignedCddLayout"
        android:layout_toEndOf="@id/assignedTableText"
        android:layout_toRightOf="@id/assignedTableText"
        android:orientation="vertical"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/assignedCddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingBottom="2sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/assignedRegNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/assignedPrgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/assignedPaperText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/assignedLateTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/other_late_tag"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"/>

</RelativeLayout>