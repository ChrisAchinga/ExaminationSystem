<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.info.ghiny.examsystem">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LinkChiefActivity"
            android:label="Connection Setup"
            android:screenOrientation="userPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainLoginActivity"
            android:label="Login Page"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".InfoGrabActivity"
            android:label="Info Enquiry"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".TakeAttdActivity"
            android:label="Attendance Collection"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".ReportAttdActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".HomeOptionActivity"
            android:label="Home"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".PopUpLogin"
            android:screenOrientation="userPortrait"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".CollectionActivity"
            android:label="Exam Papers Collection"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".InfoDisplayActivity"
            android:label="Information"
            android:screenOrientation="userPortrait"/>
        <activity
            android:name=".SettingActivity"
            android:label="Setting"/>
        <activity
            android:name=".SubmissionActivity"
            android:label="Attendance Report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DistributionActivity"
            android:label="Work Distribution"
            android:screenOrientation="userPortrait"/>
    </application>

</manifest>